<div class="container mt-5">
  <h1 class="mb-4">Add New Clothing Item</h1>

  <%= simple_form_for @clothing, wrapper: :vertical_form, html: { multipart: true } do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :title, input_html: { class: 'form-control' }, label_html: { class: 'form-label' } %>
      <%= f.input :description, as: :text, input_html: { class: 'form-control' }, label_html: { class: 'form-label' } %>
      <%= f.input :price, input_html: { class: 'form-control', min: 0, step: '0.01' }, label_html: { class: 'form-label' } %>
      <%= f.input :size, input_html: { class: 'form-control' }, label_html: { class: 'form-label' } %>
      <%= f.input :address, input_html: { data: {address_autocomplete_target: "address"}}, wrapper_html: {data: {controller: "address-autocomplete", address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}} %>
      <%= f.input :available, as: :boolean, inline_label: 'Available for rent', input_html: { class: 'form-check-input' }, label_html: { class: 'form-check-label' } %>
      <%= f.input :photo, as: :file, input_html: { class: 'form-control' }, label_html: { class: 'form-label' } %>
      <%= f.hidden_field :user_id, value: current_user.id %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
