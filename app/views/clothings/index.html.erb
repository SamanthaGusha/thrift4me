<h2>Clothes</h2>

<div class="container m-4">
<p><% @clothing.each do |clothing| %></p>
  <div class="row d-flex justify-content-center">
    <div class="card my-5">
      <p>Title: <%= clothing.title %></p>
      <p>Price: <%= clothing.price %></p>
      <p>Size: <%= clothing.size %></p>
      <button class="btn"><%= link_to "Rental", new_rental_path %></button>
    </div>
  <% end %>
  </div>
</div>
