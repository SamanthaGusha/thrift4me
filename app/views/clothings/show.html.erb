
<div class="container m-4">
  <div class="row d-flex justify-content-center">
    <h3 class="mt-4"><strong><%= @clothing.title %></strong></h3> <!--removed "Title" and added mt & strong tags-->
    <div class="card-show my-5 p-5 align-items-center">  <!--added p and align-items-->
      <p><strong>Description:</strong> <%= @clothing.description %></p>
      <p><strong>Price:</strong> R<%= @clothing.price %></p>
      <p><strong>Size:</strong> <%= @clothing.size %></p>
      <div style="width: 100%; height: 300px;"
          data-controller="map"
          data-map-markers-value="<%= @markers.to_json %>"
          data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
      <% if @clothing.available == false %>
        <p>This item is unavailable</p>
      <% end %>

      <% unless @clothing.user == current_user %>
      <button class="btn"><%= link_to "Request to rent", new_clothing_rental_path(@clothing), style: "color: white; text-decoration: none;" %></button> <!--added grey link-->
      <% end %>
    </div>
    <%= link_to "Back to main", clothings_path(@clothings), style: "color: grey; text-decoration: none;" %>  <!--added grey link-->
  </div>
</div>
