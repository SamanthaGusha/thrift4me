<h3>Title: <%= @clothing.title %></h3>

<div class="container m-4">
  <div class="row d-flex justify-content-center">
    <div class="card my-5">
      <p>Description: <%= @clothing.description %></p>
      <p>Price: R<%= @clothing.price %></p>
      <p>Size: <%= @clothing.size %></p>
      <% if @clothing.available == false %>
        <p>This item is unavailable</p>
      <% end %>
      <button class="btn"><%= link_to "Rent", new_clothing_rental_path(@clothing) %></button>
      <%= link_to "Back to main", clothings_path(@clothings) %>
    </div>
  </div>
</div>
