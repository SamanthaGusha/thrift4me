<div class="container mt-5">
  <div class="card">
    <div class="card-body">
      <h1 class="card-title text-center">New Rental</h1>

      <!-- The form partial will be rendered here with Bootstrap styling included within the form itself -->
      <%= render 'form', rental: @rental %>

      <div class="text-center mt-4">
        <%= link_to 'Back to dashboard', users_path, class: 'btn btn-primary' %>
        <%= link_to 'Back to rentals', rentals_path, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
  <p><strong>Clothing:</strong> <%= @clothing.title %></p>

  <%= simple_form_for([@clothing, @rental], wrapper: :vertical_form) do |f| %>
    <%= f.error_notification %>

    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.hidden_field :clothing_id, value: @clothing.id %>

    <div class="form-inputs">
      <%= f.input :from, as: :date %>
      <%= f.input :to, as: :date %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  <% end %>

  <%= link_to 'Back', clothing_rentals_path(@clothing) %>
</div>
